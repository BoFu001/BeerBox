<resources>
    <!-- Base application theme. -->
    <style name="Theme.BeerBox" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_200</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_500</item>
        <item name="colorSecondaryVariant">@color/pink_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black2</item>
        <!-- Tool Bar Style. -->
        <item name="toolbarStyle">@style/Theme.BeerBox.NavigationBar.Background</item>
        <!-- Background Color. -->
        <item name="android:colorBackground">@color/black3</item>
    </style>

    <style name="Theme.BeerBox.NavigationBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.BeerBox.NavigationBar.Subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.BeerBox.NavigationBar.Background" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/black3</item>
    </style>

    <style name="Theme.BeerBox.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/black4</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>